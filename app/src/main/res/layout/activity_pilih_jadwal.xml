<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".PilihJadwal"
    android:background="@drawable/bg_serv">

    <TextView
        android:id="@+id/textView18"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="20dp"
        android:layout_marginTop="310dp"
        android:fontFamily="@font/montserrat"
        android:text="Jadwal"
        android:textColor="#BFBFBF"
        android:translationY="-150dp" />

    <ImageView
        android:id="@+id/imageView52"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="340dp"
        android:layout_marginTop="205dp"
        android:src="@drawable/ic_baseline_calendar_month_24"
        android:translationY="-20dp" />

    <EditText
        android:id="@+id/editText2"
        android:layout_width="350dp"
        android:layout_height="wrap_content"
        android:layout_marginLeft="20dp"
        android:layout_marginTop="325dp"
        android:hint="Minggu 9 April 2023"
        android:minHeight="48dp"
        android:textSize="15dp"
        android:translationY="-150dp" />

    <TextView
        android:id="@+id/textView16"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="20dp"
        android:layout_marginTop="110dp"
        android:fontFamily="@font/montserrat_bold"
        android:text="Pilih Jadwal yang Diinginkan"
        android:textColor="#4F4E51"
        android:textSize="16dp" />

    <ImageView
        android:id="@+id/imageView50"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="17dp"
        android:layout_marginTop="140dp"
        app:srcCompat="@drawable/line" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Pilih Jadwal"
        android:textColor="#FFFFFF"
        android:textSize="20dp"
        android:layout_marginLeft="145dp"
        android:layout_marginTop="40dp"
        android:fontFamily="@font/montserrat_semibold"/>
    <ImageView
        android:layout_width="61dp"
        android:layout_height="48dp"
        android:src="@drawable/ic_baseline_keyboard_arrow_left_24"
        android:layout_marginTop="30dp"/>
    <TextView
        android:id="@+id/textView19"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="20dp"
        android:layout_marginTop="380dp"
        android:fontFamily="@font/montserrat"
        android:text="Pilih Jam"
        android:textColor="#BFBFBF"
        android:translationY="-150dp" />

    <ImageView
        android:id="@+id/imageView53"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:srcCompat="@drawable/rect4"
        android:layout_marginTop="260dp"
        android:layout_marginLeft="20dp"
        />
    <Button
        android:id="@+id/servis2_next"
        android:layout_width="380dp"
        android:layout_height="80dp"
        android:layout_marginLeft="15dp"
        android:layout_marginTop="730dp"
        android:backgroundTint="#576CBC"
        android:fontFamily="@font/montserrat_bold"
        android:text="LANJUT"
        android:textColor="#FFFFFF" />



</RelativeLayout>